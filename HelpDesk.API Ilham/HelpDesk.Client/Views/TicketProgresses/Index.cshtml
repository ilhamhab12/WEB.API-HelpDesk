
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutL1.cshtml";
}

<h2>Ticket Progress L1</h2>
<div class="container">
    <hr />
    @*<button type="button" class="btn btn-primary" data-toggle="modal" data-target="#myModal" onclick="LoadHiddenNotification();">Problem</button><br /><br />*@
    <table class="table table-hover" id="table">
        <thead>
            <tr>
                <th>
                    No
                </th>
                <th>
                    Ticket Problem Id
                </th>
                <th>
                    Problem
                </th>
                <th>
                    Solution
                </th>
                @*<th>
                    Due Date
                </th>*@
                @*<th>
                    Priority
                </th>
                <th>
                    Category
                </th>*@
                @*<th>
                    Customer Name
                </th>*@
                <th>
                    Created Date
                </th>
                <th>
                    Status
                </th>
                @*<th>
                    Staff
                </th>*@
                <th>
                    Action
                </th>
            </tr>
        </thead>
        <tbody class="tbody"></tbody>
    </table>
</div>
<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">×</button>
                <h4 class="modal-title" id="myModalLabel">Ticket Progress L1 Form</h4>
            </div>
            <div class="modal-body">
                <form>
                    <div class="form-group">
                            <label for="TicketId">Problem Id</label>
                            <input type="text" class="form-control" id="TicketId" placeholder="Id" disabled="disabled" />
                        </div>
                    <div class="form-group">
                        <label for="Name">Customer Name</label>
                        <textarea class="form-control" id="Name" placeholder="Name" disabled="disabled"></textarea>
                    </div>
                    <div class="form-group">
                        <label for="Problem">Problem</label>
                        <textarea class="form-control" id="Problem" placeholder="Problem" disabled="disabled"></textarea>
                    </div>
                    <div class="form-group">
                        <label for="Solution">Solution</label>
                        <textarea class="form-control" id="Solution" placeholder="Solution" disabled="disabled"></textarea>
                    </div>
                    <div class="form-group">
                        <label for="Id">TIcket Problem</label>
                        <input type="text" class="form-control" id="Id" placeholder="Id" disabled="disabled" />
                    </div>
                    <div class="form-group">
                        <label for="Priority">Priority</label>
                        <select id="Priorities" data-placement="Choose" class="form-control" onchange="LoadPriorityDay();" @*onchange="AddDueDatePriority();"*@>
                            <option value="0">Choose Priority</option>
                        </select>
                        <span style="color:red" class="error">Please Select Priority</span>
                    </div>
                    <div class="form-group">
                        <label for="DayCombo">Priority Day</label>
                        <select id="DayCombo" data-placement="Choose" class="form-control" disabled="disabled">
                            @*<option>Day</option>*@
                        </select>
                        <span style="color:red" class="error">Please Select Priority Day</span>
                    </div>
                    <div class="form-group">
                        <label for="DueDate">Due Date</label>
                        <input type="text" class="form-control" id="DueDate" placeholder="DueDate" disabled="disabled"/>
                        <span style="color:red" class="error">Valid Problem Requiere</span>
                    </div>
                    <div class="form-group">
                        <label for="Category">Category</label>
                        <select id="Categories" data-placement="Choose" class="form-control" onchange="LoadSubCategoryComboFk();">
                            <option value="0">Choose Category</option>
                        </select>
                        <span style="color:red" class="error">Please Select Category</span>
                    </div>
                    <div class="form-group">
                        <label for="SubCategory">Sub Category</label>
                        <select id="SubCategories" data-placement="Choose" class="form-control">
                            <option value="0">Select Sub Category</option>
                        </select>
                        <span style="color:red" class="error">Please Select Sub Category</span>
                    </div>
                    <div class="form-group">
                        <label for="Role">Role Staff</label>
                        <select id="Roles" data-placement="Choose" class="form-control" onchange="LoadStaffComboFk();">
                            <option value="0">Choose Role</option>
                        </select>
                        <span style="color:red" class="error">Please Select Role Staff</span>
                    </div>
                    <div class="form-group">
                        <label for="Staff">Staff</label>
                        <select id="Staffs" data-placement="Choose" class="form-control" onchange="LoadQuota();">
                            <option value="0">Select Staff</option>
                        </select>
                        <span style="color:red" class="error">Please Select Staff</span>
                    </div>
                    <div class="form-group">
                        <label for="Quota">Quota Staff to Handle Problem</label>
                        <select id="Quotas" data-placement="Choose" class="form-control" disabled="disabled">
                            @*<option>Quota</option>*@
                        </select>
                        <span style="color:red" class="error">Please Select Staff</span>
                    </div>
                    <div class="form-group">
                        <label for="Status">Status</label>
                        <select id="Statuses" data-placement="Choose" class="form-control">
                            <option>Choose Status</option>
                            @*<option>Open</option>
                                <option>On Wait</option>
                                <option>On Hold</option>
                                <option>On Progress</option>
                                <option>Resolve</option>
                                <option>Close</option>*@
                        </select>
                        <span style="color:red" class="error">Please Select Status</span>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" id="Save" onclick="ValidationSave();">Add</button>
                <button type="button" class="btn btn-primary" id="Update" style="display:none;" onclick="ValidationEdit();">Assigned</button>
                <button type="button" class="btn btn-default" data-dismiss="modal" onclick="LoadHiddenNotification();">Close</button>
            </div>
        </div>
    </div>
</div>


@section Scripts {
    <link href="~/Scripts/Content/datatables/jquery.dataTables.min.css" rel="stylesheet" />
    <script src="~/Scripts/Content/datatables/jquery.dataTables.min.js"></script>
    <link href="~/Scripts/Content/sweetalert/sweetalert.css" rel="stylesheet" />
    <script src="~/Scripts/Content/sweetalert/sweetalert.min.js"></script>    
    <script src="~/Scripts/TicketProgressMaster/RetrievingTicketProgress.js"></script>
    <script src="~/Scripts/Content/bootstrap-datepicker/bootstrap-datepicker.min.js"></script>
    <link href="~/Scripts/Content/bootstrap-datepicker/bootstrap-datepicker.min.css" rel="stylesheet" />
    <script type="text/javascript">
            $(function () {
                $('#DayCombo').datepicker({
                    format:"mm/dd/yyyy"
                })
            })
    </script>
    @Scripts.Render("~/bundles/jqueryval")
}



