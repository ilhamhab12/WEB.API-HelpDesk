
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Manage Staff</h2>
<div class="container">
    <hr />
    <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#myModal" onclick="LoadHiddenNotification();">Create New</button><br /><br />
    <table class="table table-hover" id="table">
        <thead>
            <tr>
                <th>
                    No
                </th>
                <th>
                    First Name
                </th>
                <th>
                    Last Name
                </th>
                <th>
                    Dob
                </th>
                <th>
                    Pob
                </th>
                <th>
                    Gender
                </th>
                <th>
                    Religion
                </th>
                <th>
                    Village
                </th>
                <th>
                    Address
                </th>
                <th>
                    Phone
                </th>
                <th>
                    Email
                </th>
                <th>
                    Role
                </th>
                @*<th>
                        Username
                    </th>
                    <th>
                        Password
                    </th>*@
                <th>
                    Action
                </th>
            </tr>
        </thead>
        <tbody class="tbody"></tbody>
    </table>
</div>
<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">×</button>
                <h4 class="modal-title" id="myModalLabel">Staff Form</h4>
            </div>
            <div class="modal-body">
                <form>
                    <div class="form-group">
                        <label for="Id">Id</label>
                        <input type="text" class="form-control" id="Id" placeholder="Id" disabled="disabled" />
                    </div>
                    <div class="form-group">
                        <label for="FirstName">First Name</label>
                        <input type="text" class="form-control" id="FirstName" placeholder="FirstName" />
                        <span style="color:red" class="error">Valid FirstName Requiere</span>
                    </div>
                    <div class="form-group">
                        <label for="LastName">Last Name</label>
                        <input type="text" class="form-control" id="LastName" placeholder="LastName" />
                        <span style="color:red" class="error">Valid LastName Requiere</span>
                    </div>
                    <div class="form-group">
                        <label for="Dob">Date of Birth</label>
                        <input type="text" class="form-control" id="Dob" placeholder="Dob" />
                        <span style="color:red" class="error">Valid Dob Requiere</span>
                    </div>
                    <div class="form-group">
                        <label for="Pob">Place of Birth</label>
                        <input type="text" class="form-control" id="Pob" placeholder="Pob" />
                        <span style="color:red" class="error">Valid Pob Requiere</span>
                    </div>
                    <div class="form-group">
                        <label for="Gender">Gender</label>
                        <select id="Gender" data-placement="Choose" class="form-control">
                            <option>Choose Gender</option>
                            <option>Male</option>
                            <option>Female</option>
                        </select>
                        <span style="color:red" class="error">Please Select Gender</span>
                    </div>
                    <div class="form-group">
                        <label for="Name">Religion</label>
                        <select id="Religions" data-placement="Choose" class="form-control"></select>
                        <span style="color:red" class="error">Please Select Religion</span>
                    </div>
                    <div class="form-group">
                        <label for="Name">Province</label>
                        <select id="Provinces" data-placement="Choose" class="form-control" onchange="LoadRegencyComboFk()"></select>
                        <span style="color:red" class="error">Please Select Province</span>
                    </div>
                    <div class="form-group">
                        <label for="Name">Regency</label>
                        <select id="Regencies" data-placement="Choose" class="form-control" onchange="LoadDistrictComboFk()">
                            <option value="0">Select Regency</option>
                        </select>
                        <span style="color:red" class="error">Please Select Regency</span>
                    </div>
                    <div class="form-group">
                        <label for="Name">District</label>
                        <select id="Districts" data-placement="Choose" class="form-control" onchange="LoadVillageComboFk()">
                            <option value="0">Select District</option>
                        </select>
                        <span style="color:red" class="error">Please Select District</span>
                    </div>
                    <div class="form-group">
                        <label for="Name">Village</label>
                        <select id="Villages" data-placement="Choose" class="form-control">
                            <option value="0">Select Village</option>
                        </select>
                        <span style="color:red" class="error">Please Select Village</span>
                    </div>
                    <div class="form-group">
                        <label for="Address">Address</label>
                        <textarea class="form-control" id="Address" placeholder="Address"></textarea>
                        @*<input type="text" class="form-control" id="Address" placeholder="Address" />*@
                        <span style="color:red" class="error">Valid Address Requiere</span>
                    </div>
                    <div class="form-group">
                        <label for="Phone">Phone</label>
                        <input type="text" class="form-control" id="Phone" placeholder="Phone" />
                        <span style="color:red" class="error">Valid Phone Requiere</span>
                    </div>
                    <div class="form-group">
                        <label for="Email">Email</label>
                        <input type="email" class="form-control" id="Email" placeholder="Email" />
                        <span style="color:red" class="error">Valid Email Requiere</span>
                    </div>
                    <div class="form-group">
                        <label for="Name">Role</label>
                        <select id="Roles" data-placement="Choose" class="form-control">
                            <option value="0">Select Role</option>
                        </select>
                        <span style="color:red" class="error">Please Select Role</span>
                    </div>
                    <div class="form-group">
                        <label for="Username">Username</label>
                        <input type="text" class="form-control" id="Username" placeholder="Username" disabled="disabled" />
                        <span style="color:red" class="error">Valid Username Requiere</span>
                    </div>
                    <div class="form-group">
                        <label for="Password">Password</label>
                        <input type="text" class="form-control" id="Password" placeholder="Password" disabled="disabled" />
                        <span style="color:red" class="error">Valid Password Requiere</span>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" id="Save" onclick="ValidationSave();">Add</button>
                <button type="button" class="btn btn-primary" id="Update" style="display:none;" onclick="ValidationEdit();">Update</button>
                <button type="button" class="btn btn-default" data-dismiss="modal" onclick="LoadHiddenNotification();">Close</button>
            </div>
        </div>
    </div>
</div>


@section Scripts {
    <link href="~/Scripts/Content/datatables/jquery.dataTables.min.css" rel="stylesheet" />
    <script src="~/Scripts/Content/datatables/jquery.dataTables.min.js"></script>
    <link href="~/Scripts/Content/sweetalert/sweetalert.css" rel="stylesheet" />
    <script src="~/Scripts/Content/sweetalert/sweetalert.min.js"></script>
    <script src="~/Scripts/StaffMaster/RetrievingStaff.js"></script>
    <script src="~/Scripts/Content/bootstrap-datepicker/bootstrap-datepicker.min.js"></script>
    <link href="~/Scripts/Content/bootstrap-datepicker/bootstrap-datepicker.min.css" rel="stylesheet" />
    <script type="text/javascript">
        $(function () {
            $('#Dob').datepicker({
                format:"mm/dd/yyyy"
            })
        })
    </script>
    @Scripts.Render("~/bundles/jqueryval")
}
